{% extends '@App/base.html.twig' %}

{% block content %}
    <div class="sub-header row">
        <div class="col-md-9">
            <h2>All created models</h2>
        </div>
        <div class="col-md-3" style="padding-top: 25px">
            <a class="btn btn-success" style="float: right" href="{{ path('model_create') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                Add new model
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Model</th>
                <th>Manufacture</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for model in models %}
                <tr>
                    <td>{{ model.id }}</td>
                    <td>{{ model.name|default('no model') }}</td>
                    <td>{{ model.manufacture.name|default('no manufacture') }}</td>
                    <td>
                        <a href="{{ path('model_edit', {model: model.id }) }}" class="btn btn-primary">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a class="btn bg-danger" href="{{ path('model_delete', { model: model.id }) }}">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}