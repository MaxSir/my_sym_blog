{% extends '@App/base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-4">
            {{ form_start(form, {'method': 'post'})  }}
            <div class="form-group">
                {{ form_label(form.color) }}
                {{ form_widget(form.color, { 'attr': { class: 'form-control' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.year) }}
                {{ form_widget(form.year, { 'attr': { class: 'form-control' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.model) }}
                {{ form_widget(form.model) }}
                <!-- Button trigger modal -->
                <a href="{{ path('model_create') }}" data-toggle="modal" data-target="#createModel">Add model</a>
            </div>
            <div class="form-group">
                <button class="btn-primary btn" type="submit">Save changes</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="createModel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

            </div>
        </div>
    </div>
{% endblock %}