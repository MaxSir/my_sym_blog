{% extends '@App/base.html.twig'%}

{% block content %}
    <div class="row">
        <div class="col-md-4">
            {{ form_start(form, { 'method': 'post' }) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, { 'attr': { class: 'form-control' } }) }}
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}